---
import TextField from './TextField.astro'
import { Image } from 'astro:assets'
import profilePic from '../assets/me.png'

const titleClass = 'text-xl xl:text-2xl dark:text-indigo-100 transition-colors duration-300'

const associationClass =
	'text-sm xl:text:md text-green-800 dark:text-indigo-300 transition-colors duration-300'
---

<div class='mx-auto max-w-7xl' id='about'>
	<div
		class='fade-in-1 animate-opacity col-span-3 my-auto w-full opacity-0'
		style='animation-delay: 0.2s'
	>
		<div class='my-10 flex justify-center xl:absolute xl:my-0 xl:flex-none xl:justify-start'>
			<Image
				src={profilePic}
				alt='profile'
				width={200}
				height={200}
				class='fade-in-2 rounded-full border-4 border-green-500 transition-colors duration-300 dark:border-indigo-500'
			/>
		</div>
		<div class='quicksand mx-auto flex w-full p-1'>
			<div class='animate-right my-auto h-full w-1/2 justify-center text-right'>
				<h2 class={titleClass}>BSc. Computer Science</h2>
				<p class={associationClass}>Aalto University</p>
			</div>
			<div class='line mx-6 h-[10rem] w-[0.12rem] transition-colors duration-300'></div>
			<div class='animate-left my-auto h-full w-1/2 justify-center transition-colors duration-300'>
				<h2 class={titleClass}>Assistant Research Scientist</h2>
				<p class={associationClass} '>Finnish Geospatial Research Institute</p>
			</div>
		</div>
	</div>
</div>

<style>
	.animate-opacity {
		animation: opacity-animation 1s ease-out forwards;
		opacity: 0%;
	}

	@keyframes opacity-animation {
		0% {
			opacity: 0%;
		}
		100% {
			opacity: 1;
		}
	}

	.animate-left {
		animation: left-animation 0.8s ease-out forwards;
		right: -2.5rem;
		position: relative;
	}

	@keyframes left-animation {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-2.5rem);
		}
	}

	.animate-right {
		animation: right-animation 0.8s ease-out forwards;
		left: -2.5rem;
		position: relative;
	}

	@keyframes right-animation {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(2.5rem);
		}
	}

	.line {
		background: linear-gradient(transparent 0%, rgb(4, 172, 60) 50%, transparent 100%);
	}

	.line:is(.dark *) {
		background: linear-gradient(transparent 0%, rgb(162, 139, 247) 50%, transparent 100%);
	}

	.quicksand {
		font-family: 'Quicksand', sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
	}
</style>
