---
const { href } = Astro.props

const buttonClass =
	'text-4xl xl:text-4xl bebas-neue-regular dark:hover:text-indigo-400 hover:text-green-400 transition my-auto'
---

<div class='h-26 flex justify-center'>
	<a {href} class={buttonClass}>
		<slot />
	</a>
</div>

<style>
	.bebas-neue-regular {
		font-family: 'Bebas Neue', sans-serif;
		font-weight: 400;
		font-style: normal;
	}

	.poetsen-one-regular {
		font-family: 'Poetsen One', sans-serif;
		font-weight: 400;
		font-style: normal;
	}
</style>
