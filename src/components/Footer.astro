---
import Icon from './Icon.astro'

const iconSize = 100
---

<div class='w-full justify-center flex h-[20rem] items-center px-5'>
  <div class='text-center quicksand xl:text-xl dark:text-white'>
    <div class='w-full flex justify-center'>
      <Icon
        name='apple'
        color='#4b6e4b'
        size={50}
        customClass='dark:fill-indigo-400'
      />
    </div>
    <br />
    <p class='flex items-center justify-center'>
      Powered by
      <a class='px-1 xl:px-2' href='https://astro.build/' target='_blank'>
        <Icon
          customClass='dark:fill-white w-16 xl:w-20'
          name='astro'
          size={iconSize}
        /></a
      > and <a class='px-1 xl:pl-2' href='https://vercel.com/' target='_blank'>
        <Icon
          name='vercel'
          customClass='dark:fill-white w-16 xl:w-20'
          size={iconSize}
        /></a
      >
      .
    </p>
    <p>
      Source code is available <a
        class='text-green-500 dark:text-violet-300'
        href='https://github.com/eemelioksanen/website'
        target='_blank'
      >
        here</a
      >.
    </p>

    <br />
    <p class='xl:text-lg'>&copy Eemeli Oksanen 2024</p>
  </div>
</div>

<p class='quicksand text-xl'></p>

<style>
  .quicksand {
    font-family: 'Quicksand', sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
  }
</style>
