---
import NavItem from './NavItem.astro'
import Icon from './Icon.astro'

const iconClass = 'transition hover:fill-green-400'
const linkClass = 'my-auto animate-up'

const social_icon_size = 34
---

<div
  class='w-screen fixed bg-white backdrop-blur-xl rounded-bl-2xl bg-opacity-40 animate-opacity z-50'
>
  <div class='animate-opacity' style='animation-delay: 100ms;'>
    <div
      class='absolute inset-0 bg-white/60 border-b border-b-black/5'
      style={{ zIndex: -1 }}
    >
    </div>
    <div class='w-full flex h-[4rem] items-center overflow-visible'>
      <div class='mx-auto flex h-full my-auto gap-20 justify-between max-w-7xl'>
        <NavItem href={'#about'}>About</NavItem>
        <NavItem href={'#projects'}>Projects</NavItem>
        <a href='#top' class='pt-1'>
          <Icon customClass={iconClass} name='apple' size={55} color='black' />
        </a>
        <NavItem href={'#academics'}>Academics</NavItem>
        <NavItem href={'#academics'}>Academics</NavItem>
      </div>
      <div class='flex gap-4 justify-end pr-16 absolute right-0'>
        <a
          class={linkClass}
          href='https://github.com/eemelioksanen'
          style='animation-delay: 50ms;'
          target='_blank'
        >
          <Icon
            customClass={iconClass}
            color='black'
            name='github'
            size={social_icon_size}
          />
        </a>
        <a
          class={linkClass}
          style='animation-delay: 100ms;'
          href='https://www.linkedin.com/in/eoksanen/'
          target='_blank'
        >
          <Icon
            customClass={iconClass}
            name='linkedin'
            size={social_icon_size}
            color='black'
          />
        </a>
        <a
          class={linkClass}
          href='https://t.me/eemelioksanen'
          style='animation-delay: 150ms;'
          target='_blank'
        >
          <Icon
            customClass={iconClass}
            name='telegram'
            size={social_icon_size}
            color='black'
          />
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .bebas-neue-regular {
    font-family: 'Bebas Neue', sans-serif;
    font-weight: 400;
    font-style: normal;
  }

  .animate-opacity {
    animation: opacity-animation 0.5s ease-out forwards;
    opacity: 0%;
  }

  @keyframes opacity-animation {
    0% {
      opacity: 0%;
    }
    100% {
      opacity: 1;
    }
  }
  .nav-gradient {
    background-image: linear-gradient(
      to bottom,
      rgb(222, 249, 226, 1) 0%,
      rgb(222, 249, 226, 1) 80%,
      rgb(222, 249, 226, 0) 100%
    );
  }
</style>
